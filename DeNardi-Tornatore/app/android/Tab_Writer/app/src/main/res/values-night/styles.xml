<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <!-- Night/Dark Mode theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrey</item>
        <item name="colorPrimaryDark">@color/colorGreyDark</item>
        <item name="colorAccent">@color/colorRed</item>
        <item name="android:statusBarColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/arlon_regular</item>
    </style>
    <style name="AppTheme.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>